<div>
  <main>
    <div>
        {{> card_1 image="data:image/jpeg;base64,"
        title=name text=description}}
    </div>
    <br>
    <div>
        <h3><span class="badge rounded-pill text-bg-success">Ціна: {{price}}</span></h3>
    </div>    
        <p>Категорія: {{category}}</p>        
    </section>
    <h2>{{> background text="Характеристики"}}</h2>
        {{#with features}}
        <div>
            {{#with processor}}
                <p>Процессор: {{brand}} {{model}}, {{speed}}, {{cores}} cores, {{cache}} cache</p>
            {{/with}}
        </div>
        <div>    
            {{#with memory}}
                <p>Оперативна пам'ять: {{type}}, {{size}}, {{speed}}</p>
            {{/with}}
        </div>
        <div>
            {{#with storage}}
                <p>Накопчувач: {{type}}, {{size}}</p>
            {{/with}}
        </div>
        <div>
            {{#with display}}
                <p>Параметри дисплея: {{size}}, {{resolution}}, {{technology}}, {{color_space}}, {{brightness}}, {{refresh_rate}}s</p>
            {{/with}}
        </div>
        <div>
            {{#with graphics}}
                <p>Графічний адаптер: {{brand}} {{model}}, {{memory}}</p>
            {{/with}}
        </div>
            <p>Порти:</p>
            <ul>
            {{#each ports}}
                <li>Тип: {{type}}</li>
                <li>Кількість: {{count}}</li>
                <li>Можливості: {{#each features}} {{this}} {{/each}} </li>
                <br>
            {{/each}}
            </ul>
        <div>
            {{#with battery}}
                <p>Акумулятор: {{type}}, ємність: {{capacity}}, час роботи - {{life}}</p>
            {{/with}}
        </div>
            <p>Вага: {{weight}}</p>
            <p>Розмір: {{#with dimensions}} {{height}} x {{width}}  x  {{depth}} {{/with}}</p>
            <p>Операційна система: {{operating_system}}</p>
            <p>Додаткові аксесуари:</p>
            <div>
            {{#each accessories}}
            {{> card_1 image=image alt="noImage" title=name text=price}}
            <br>
            {{/each}}
            </div>          
        {{/with}}
  </main>
</div>