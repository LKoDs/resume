{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  {{#with main}}    
    <main>
      <section>
        {{> title big=true data="Work history"}}
        <div>
          <ul>
              {{#each work}}
              <li>
                <div>{{position}}</div>
                <br>
                <div>
                  {{duration.from}} - 
                  {{#if duration.to}} 
                    {{duration.to}} 
                  {{else}} 
                    (досі працюємо) 
                  {{/if}}
                </div>
                <br>                
                <div>
                {{#if company.url}}
                    {{> link text=company.name href=company.url blank=true noLine=true}}
                  {{else}}
                    <b>{{company.name}}</b>
                  {{/if}}
                 </div>
                <br>
                <br>
                <br>
                <div>
                  <strong>Projects ({{projectAmount}})</strong>
                </div>
                <br>
                <ul>
                  {{#each projects}}
                    <li>
                      <div>{{> link text=name href=url blank=true noLine=true}}</div>
                      <br>
                      <div>{{about}}</div>
                      <br>
                        <em>Project stacks ({{stackAmount}})</em>
                      <br>
                      <div>
                          {{#each stacks}}
                          <div>{{name}}</div>
                          {{/each}}
                      </div>
                      <br>
                        <em>Project awards ({{awardAmount}})</em>
                      <br>
                      <div>
                          {{#each awards}}
                          <div>{{name}}</div>
                          {{/each}}
                      </div>
                    </li>
                  {{/each}}
                </ul>
              </li>
              <br>
              {{/each}}
          </ul>
        </div>
      </section>
      </main>
  {{/with}}  

</div>

{{!-- 
    Цей код містить лише те, що буде виводитись в {{{body}}} в layout/default.hbs
    Адже наш layout/default.hbs має вже структуру HTML
--}}